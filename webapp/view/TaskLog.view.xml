<mvc:View
    xmlns:mdc="sap.ui.mdc"
    height="100%"
    controllerName="pgdc0020_1.controller.TaskLog"
    xmlns:m="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:unified="sap.ui.unified"
    xmlns:semantic="sap.m.semantic"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns="sap.uxap"
    xmlns:my="pgdc0020_1."
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:smartVariantManagement="sap.ui.comp.smartvariants" 
>
    <m:Page
        id="page"
        enableScrolling="true"
        navButtonPress="onNavBack"
        showHeader="false"
        showNavButton="true"
        showFooter="false"
        busy="{objectView>/busy}"
        title="{i18n>detailTitle}"
    >
        <m:content>
            <m:VBox height="100%">
                <ObjectPageLayout
                    id="ObjectPageLayout"
                    showFooter="false"
                    upperCaseAnchorBar="false"
                    height="100%"
                    alwaysShowContentHeader="true"
                    preserveHeaderStateOnScroll="false"
                    useIconTabBar="true"
                    selectedSection="pagesection"
                >
                    <headerTitle>
                        <ObjectPageHeader
                            id="headerForTest"
                            objectTitle="{i18n>CnsldtnTaskTypeT}"
                        />
                    </headerTitle>
                    <headerContent>
                        <m:Panel id="contentPanel" >
                        </m:Panel>
                    </headerContent>
                    <sections>
                        <ObjectPageSection id="pagesection">
                            <subSections>
                                <ObjectPageSubSection
                                    id="subsection"
                                    title="{i18n>LogDocuTitle}"
                                >
                                    <blocks>
                                        <m:VBox height="100%" class="scrollablePlace">
                                        <smarttable:SmartTable
                                            entitySet="UplStLogEntity"
                                            editable="false"
                                            header="{i18n>LogDocuTitle}"
                                            useExportToExcel="true"
                                            useTablePersonalisation="true"
                                            beforeRebindTable="onBeforeRebindReclassification"
                                            height="100%"
                                            showRowCount="true"
                                            persistencyKey="pgdc0020_1.tasklog.filter.variant"
                                            placeToolbarInTable="true"
                                            enableAutoBinding="true"
                                            useVariantManagement="true"
                                            showFullScreenButton="true"
                                            class="sapFioriListReportSmartTable"
                                        >
                                             <smarttable:layoutData>
                                                <m:FlexItemData
                                                    id="FlexItemData"
                                                    growFactor="1"
                                                    baseSize="0%"
                                                />
                                            </smarttable:layoutData>
                                              <table:Table
                                                    width="100%"
                                                    id="pgdc0020_1.table.tasklog"
                                                    enableColumnReordering="false"
                                                    enableCustomFilter="false"
                                                    enableCellFilter="false"
                                                    threshold="100"
                                                    minAutoRowCount="18"
                                                    rowActionCount="1"
                                                    visibleRowCountMode="Auto"
                                                />
                                        </smarttable:SmartTable>
                                        </m:VBox>
                                    </blocks>
                                </ObjectPageSubSection>
                            </subSections>
                        </ObjectPageSection>
                    </sections>
                </ObjectPageLayout>
            </m:VBox>
        </m:content>
    </m:Page>
</mvc:View>
